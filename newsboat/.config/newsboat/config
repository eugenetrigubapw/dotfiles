# Tokyo Night colors
color background         default   default
color listnormal         color145  default
color listnormal_unread  color109  default  bold
color listfocus          color234  color109
color listfocus_unread   color234  color109  bold
color info               color109  color234
color article            color145  default

# Highlights for articles
highlight article "^(Feed|Title|Author|Link|Date):.*$" color109 default bold
highlight article "https?://[^ ]+" color110 default underline
highlight article "\\[[0-9]+\\]" color167 default bold
highlight article "\\[image\\ [0-9]+\\]" color109 default bold

# Vi-style keybindings
bind-key j down
bind-key k up
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete

# Browser
browser "chrome %u"

# Formatting
articlelist-format "%4i %f %D  %?T?|%-17T| ?%t"
feedlist-format "%4i %n %11u %t"
text-width 80

# Behavior
auto-reload yes
reload-time 60
refresh-on-startup yes
show-read-feeds yes
show-read-articles yes
