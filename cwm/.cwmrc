####################
# Key bindings
#
# For bind-key:
# - 4 = super
# - M = alt
# - C = ctrl
# - S = shift
#
# For bind-mouse:
# - 1 = left
# - 2 = middle
# - 3 = right
####################
bind-key 4-v  window-vtile
bind-key 4-h  window-snap-left
bind-key 4-j  window-snap-down
bind-key 4-k  window-snap-up
bind-key 4-l  window-snap-right

# Emulate workspaces with cwm's groups
bind-key M-1  group-only-1
bind-key M-2  group-only-2
bind-key M-3  group-only-3
bind-key M-4  group-only-4
bind-key M-5  group-only-5
bind-key MS-1 window-movetogroup-1
bind-key MS-2 window-movetogroup-2
bind-key MS-3 window-movetogroup-3
bind-key MS-4 window-movetogroup-4
bind-key MS-5 window-movetogroup-5

unbind-mouse M-3
bind-mouse M-3 window-resize

bind-key CM-r reload
bind-key 4-Return xterm

#
# Options
#
sticky yes
moveamount 5

####################
# Appearance
####################
fontname "Hack:pixelsize=14"
color menubg   "#32302f"
color menufg   "#ebdbb2"
color font     "#ebdbb2"
color selffont "#32302f"
gap 32 6 6 6
