	name = Eugene Triguba
	email = eugene.triguba@paymentworks.com
	signingkey = D533F38E000CD2BB
[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
[pull]
  ff = only
[push]
	autoSetupRemote = true
[fetch]
	prune = true
[diff]
	colorMoved = zebra
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[gpg]
	program = gpg
[sendemail]
	sendmailCmd = /opt/homebrew/bin/msmtp -a icloud
	confirm = auto
	annotate = yes
	chainreplyto = false
	thread = yes
	suppresscc = self
[credential]
	helper = osxkeychain
