[user]
	name = Eugene Triguba
	email = hello@eugenetriguba.com
	signingkey = E2C90ACA3CC16B98
[core]
	editor = nvim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
[pull]
  ff = only
[push]
	autoSetupRemote = true
[fetch]
	prune = true
[diff]
	colorMoved = zebra
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[gpg]
	program = gpg
[sendemail]
	smtpserver = smtp.mail.me.com
	smtpserverport = 587
	smtpencryption = tls
	smtpuser = hello@eugenetriguba.com
	confirm = auto
	annotate = yes
	chainreplyto = false
	thread = yes
[credential]
	helper = osxkeychain
